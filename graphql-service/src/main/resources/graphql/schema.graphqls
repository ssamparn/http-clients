type Movie {
    id: ID!
    title: String!
    year: Int!
    genres: [String!]!
    director: String!
}

type Actor {
    id: ID!
    name: String!
    movies: [Movie!]!
}

type Query {
    allmovies: [Movie]
    moviebyid (id: ID!): Movie
    actorbyid (id: ID!): Actor
}

type Mutation {
    addmovie (
        id: ID!
        title: String!
        year: Int!
        genres: [String]!
        director: String!
    ): Movie
}